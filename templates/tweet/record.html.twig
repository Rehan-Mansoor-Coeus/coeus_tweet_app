{% extends '/layout/base.html.twig' %}

{% block title %}Create Tweet!{% endblock %}

{% block body %}
     {% for message in app.flashes('success') %}
          <div class="alert alert-danger">
               {{ message }}
          </div>
     {% endfor %}
     <div class="card">
          <div class="card-header">
               <header>Tweet Records</header>
               <a class="btn btn-warning float-right" href="/tweet">Create</a>
          </div>
          <div class="card-body">
               <table class="table table-bordered table-striped">
                    <thead>
                    <tr class="bg-danger">
                         <th>ID</th>
                         <th>Author</th>
                         <th>Post</th>
                         <th>Date</th>
                         <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in tweet %}
                         <tr>
                              <td>{{ data.id }}</td>
                              <td>{{ data.username }}</td>
                              <td>{{ data.tweet }}</td>
                              <td>{{ data.created_at }}</td>
                              <td>
                                   <a href="/edit-tweet/{{ data.id }}" class="btn btn-primary">Edit</a>
                                   <a href="/delete-tweet/{{ data.id }}" class="btn btn-danger">Del</a>
                              </td>
                         </tr>
                    {% endfor %}
                    </tbody>
               </table>
          </div>

     </div>

{% endblock %}
